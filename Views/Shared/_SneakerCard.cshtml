@model Sneaker

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            <h4 class="pull-right">@Model.Price.ToString("c")</h4>
            <h4>
                <a asp-controller="Sneaker" asp-action="Details" asp-route-id="@Model.SneakerId">@Model.Name</a>
            </h4>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-sneakerId="@Model.SneakerId">Add to cart</a>
            </p>
        </div>
    </div>
</div>